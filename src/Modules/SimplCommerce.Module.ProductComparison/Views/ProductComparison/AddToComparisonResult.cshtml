@model SimplCommerce.Module.Orders.ViewModels.AddToComparisonResult

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">@Localizer["The product has been added to comparison items"]</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-3">
            <img alt="@Model.ProductName" class="img-responsive" src="@Model.ProductImage">
        </div>
        <div class="col-md-6">
            <h4>@Model.ProductName</h4>
            <h6>@Model.VariationName</h6>
        </div>
        <div class="col-md-3">           
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">@Localizer["Continue shopping"]</button>
    <a href="~/cart" type="button" class="btn btn-default">@Localizer["Comparison"]</a>
</div>
