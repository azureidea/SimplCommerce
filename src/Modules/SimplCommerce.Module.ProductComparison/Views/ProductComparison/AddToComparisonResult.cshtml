@model SimplCommerce.Module.ProductComparison.ViewModels.AddToComparisonResult

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">@Localizer[Model.Message]</h4>
</div>
<div class="modal-body">
    @foreach (var product in Model.ProductComparisons)
    {
        <div class="row">
            <input type="hidden" name="productId" value="@product.ProductId" />
            <div class="col-md-3">
                <img alt="@product.ProductName" class="img-responsive" src="@product.ProductImage">
            </div>
            <div class="col-md-5">
                <h4>@product.ProductName</h4>
            </div>
            <div class="col-md-3">
                @product.ProductPrice.ToString("C")
            </div>
            <div class="col-md-1">
                <button type="button" class="close remove-item-comparison" aria-label="Remove"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
            </div>
        </div>
    }    
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">@Localizer["Continue shopping"]</button>
    <a href="~/productcomparison" type="button" class="btn btn-default">@Localizer["Comparison"]</a>
</div>
